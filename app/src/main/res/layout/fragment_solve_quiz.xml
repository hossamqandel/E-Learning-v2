<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ui.Fragment.Student.SolveQuiz.SolveQuizFragment">


    <TextView
        android:id="@+id/solveQuiz_setError_TV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Error"
        android:gravity="center"
        android:textSize="@dimen/_25sdp"
        android:visibility="gone"
        tools:visibility="visible"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/solveQuiz_QuistionCard"
        android:layout_width="0dp"
        android:layout_height="@dimen/_90sdp"
        android:layout_marginHorizontal="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_40sdp"
        app:cardCornerRadius="@dimen/_6sdp"
        app:cardElevation="@dimen/_4sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/solveQuiz_quistion_TV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="#EF7B73"
            android:textSize="@dimen/_16sdp"
            android:textStyle="bold"
            tools:text="Where is Egypt" />
    </androidx.cardview.widget.CardView>

    <!--  ******************  -->

    <androidx.cardview.widget.CardView
        android:id="@+id/solveQuiz_FirstAnswerCard"
        android:layout_width="@dimen/_240sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginTop="@dimen/_12sdp"
        app:cardCornerRadius="@dimen/_6sdp"
        app:cardElevation="@dimen/_4sdp"
        app:layout_constraintStart_toStartOf="@+id/solveQuiz_QuistionCard"
        app:layout_constraintTop_toBottomOf="@+id/solveQuiz_QuistionCard">

        <TextView
            android:id="@+id/solveQuiz_FirstAnswer_TV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="start|center_vertical"
            android:paddingHorizontal="@dimen/_8sdp"
            android:textColor="@color/dark_charcoal"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold"
            tools:text="Where is Egypt" />
    </androidx.cardview.widget.CardView>

    <!--  ****************  -->

    <androidx.cardview.widget.CardView
        android:id="@+id/solveQuiz_SecondAnswerCard"
        android:layout_width="0dp"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginTop="@dimen/_12sdp"
        app:cardCornerRadius="@dimen/_6sdp"
        app:cardElevation="@dimen/_4sdp"
        app:layout_constraintEnd_toEndOf="@+id/solveQuiz_FirstAnswerCard"
        app:layout_constraintStart_toStartOf="@+id/solveQuiz_FirstAnswerCard"
        app:layout_constraintTop_toBottomOf="@+id/solveQuiz_FirstAnswerCard">

        <TextView
            android:id="@+id/solveQuiz_SecondAnswer_TV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="start|center_vertical"
            android:paddingHorizontal="@dimen/_8sdp"
            android:textColor="@color/dark_charcoal"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold"
            tools:text="Where is Egypt" />
    </androidx.cardview.widget.CardView>


    <!--  **************  -->

    <androidx.cardview.widget.CardView
        android:id="@+id/solveQuiz_ThirdAnswerCard"
        android:layout_width="0dp"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginTop="@dimen/_12sdp"
        app:cardCornerRadius="@dimen/_6sdp"
        app:cardElevation="@dimen/_4sdp"
        app:layout_constraintEnd_toEndOf="@+id/solveQuiz_FirstAnswerCard"
        app:layout_constraintStart_toStartOf="@+id/solveQuiz_FirstAnswerCard"
        app:layout_constraintTop_toBottomOf="@+id/solveQuiz_SecondAnswerCard">

        <TextView
            android:id="@+id/solveQuiz_ThirdAnswer_TV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="start|center_vertical"
            android:paddingHorizontal="@dimen/_8sdp"
            android:textColor="@color/dark_charcoal"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold"
            tools:text="Where is Egypt" />
    </androidx.cardview.widget.CardView>

    <!--  **********  -->

    <androidx.cardview.widget.CardView
        android:id="@+id/solveQuiz_LastAnswerCard"
        android:layout_width="0dp"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginTop="@dimen/_12sdp"
        app:cardCornerRadius="@dimen/_6sdp"
        app:cardElevation="@dimen/_4sdp"
        app:layout_constraintEnd_toEndOf="@+id/solveQuiz_FirstAnswerCard"
        app:layout_constraintStart_toStartOf="@+id/solveQuiz_FirstAnswerCard"
        app:layout_constraintTop_toBottomOf="@+id/solveQuiz_ThirdAnswerCard">

        <TextView
            android:id="@+id/solveQuiz_LastAnswer_TV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="start|center_vertical"
            android:paddingHorizontal="@dimen/_8sdp"
            android:textColor="@color/dark_charcoal"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold"
            tools:text="Where is Egypt" />
    </androidx.cardview.widget.CardView>

    <RadioGroup
        android:id="@+id/radioGroup2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="@+id/solveQuiz_LastAnswerCard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/solveQuiz_FirstAnswerCard"
        app:layout_constraintTop_toTopOf="@+id/solveQuiz_FirstAnswerCard">

        <RadioButton
            android:id="@+id/rb1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/_40sdp" />

        <RadioButton
            android:id="@+id/rb2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/_50sdp" />

        <RadioButton
            android:id="@+id/rb3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/_50sdp" />

        <RadioButton
            android:id="@+id/rb4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/_40sdp" />
    </RadioGroup>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/solveQuiz_submit_BTN"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_50sdp"
        android:backgroundTint="@color/profile_board"
        app:cornerRadius="@dimen/_8sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/solveQuiz_LastAnswerCard" />

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"
        tools:visibility="visible"/>

</androidx.constraintlayout.widget.ConstraintLayout>